<%= form_with model: [ @article, @article.comments.build ], class: "needs-validation", novalidate: true do |form| %>
  <div class="mb-3">
    <%= form.label :commenter, class: "form-label" %>
    <%= form.text_field :commenter, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :body, class: "form-label" %>
    <%= form.text_area :body, class: "form-control", rows: 3 %>
  </div>
  <div class="mb-3">
    <%= form.submit "Submit", class: "btn btn-success" %>
  </div>
<% end %>
