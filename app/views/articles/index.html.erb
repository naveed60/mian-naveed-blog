<div class="col-md-3 py-3 px-3">
  <div class="card card_style mx-0 bg-white shadow border-0 " style="border-radius:24px;">
    <div class="card-body">
      <h5 class="card-title activity_title blog_font_style c-default"></h5>
      <div class="row">
        <div class="col">
          <div class="d-flex align-items-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="8" height="8" fill="currentColor"
              class="bi bi-stopwatch-fill" viewBox="0 0 16 16">
              <path
                d="M6.5 0a.5.5 0 0 0 0 1H7v1.07A7.001 7.001 0 0 0 8 16a7 7 0 0 0 5.29-11.584.531.531 0 0 0 .013-.012l.354-.354.353.354a.5.5 0 1 0 .707-.707l-1.414-1.415a.5.5 0 1 0-.707.707l.354.354-.354.354a.717.717 0 0 0-.012.012A6.973 6.973 0 0 0 9 2.071V1h.5a.5.5 0 0 0 0-1h-3zm2 5.6V9a.5.5 0 0 1-.5.5H4.5a.5.5 0 0 1 0-1h3V5.6a.5.5 0 1 1 1 0z" />
            </svg>
            
            <% @articles.each do |article| %>
                     
              <%= link_to article.title.truncate(4), article  , style:"text-decoration:none;" %>

              <span class="ml-2 link_styles c-default">
              </span>
              <span class="ml-2 link_styles c-default">
              </span>
              <span class="ml-2 link_styles c-default">
              </span>
          
            <% end %>
          </div>
          <div class="d-flex align-items-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="8" height="8" fill="currentColor"
              class="bi bi-people-fill" viewBox="0 0 16 16">
              <path
                d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7Zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm-5.784 6A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216ZM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z" />
            </svg>
            <span class="ml-2 link_styles c-default"></span>
          </div>
        </div>
      </div>
      <div class="py-3 c-default">
       
      </div>
       
    </div>
  </div>
</div>

<div class= "col-lg-10 mx-auto">
 <h1>Articles</h1>

  <ul>
    <% @articles.each do |article| %>
      <li>
      <div class="fs-2">
        <%= link_to article.title, article  , style:"text-decoration:none;" %>
      </div>
      </li>
    <% end %>
  </ul>

   <%= link_to "New Article", new_article_path , class: "btn btn-success " , style:"text-decoration:none;" %>

</div>
