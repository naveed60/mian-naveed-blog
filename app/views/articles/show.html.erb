<div class= "col-lg-10 mx-auto mt-2 ">
  <%= link_to 'Back', 'javascript:history.back()', class: "btn btn-success btn-block me-1" %>
  
  <%= image_tag @article.image, style: "border-radius: 1%; width:100%; margin-top:25px; height:30%;" if @article.image.attached? %>
  
  <h1><%= @article.title %></h1>
  <p><%= @article.body %></p>

  <div class="d-flex ">
    <%= link_to "Edit", edit_article_path(@article), class: "btn btn-success me-1" %>
    <%= link_to "New Article", new_article_path, class: "btn btn-success me-1" %>
    <%= link_to 'Delete', @article, class: "btn btn-success me-1", method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
    <%= render partial:'comments/comment'%> 
    <h2>Add a comment:</h2>
    <%= render partial:'comments/form'%>

</div>
